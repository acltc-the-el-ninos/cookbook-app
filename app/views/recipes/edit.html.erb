<h1>Update the recipe:</h1>
<%= form_tag "/recipes/#{@recipe.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :input_title %>
    <%= text_field_tag(:input_title, @recipe.title, {class: "form-control", placeholder: "Enter the title here!"})%>
  </div>
  <div class="form-group">
    <%= label_tag :input_chef %>
    <%= text_field_tag :input_chef, @recipe.chef, class: "form-control", placeholder: "Enter the chef's name here!" %>
  </div>
  <div class="form-group">
    <%= label_tag :input_ingredients %>
    <%= text_field_tag :input_ingredients, @recipe.ingredients, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :input_directions %>
    <%= text_field_tag :input_directions, @recipe.directions, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>